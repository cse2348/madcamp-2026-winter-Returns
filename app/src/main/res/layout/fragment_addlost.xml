<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분실하신 물건의 특징을 입력해주세요"
                android:textColor="@color/text_foreground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(자세하게 입력할수록 물건을 찾을 확률이 높아집니다.)"
                android:textColor="@color/text_muted"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:text="제목"
            style="@style/LabelStyle" />
        <EditText
            android:id="@+id/et_title"
            android:hint="예: 검정 지갑 분실"
            android:minLines="1"
            style="@style/InputStyle" />

        <TextView
            android:text="물건이미지"
            style="@style/LabelStyle" />
        <LinearLayout
            android:id="@+id/btn_image_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border_dashed"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_5">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_camera"
                app:tint="@color/text_muted" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
        </LinearLayout>

        <TextView
            android:text="분실한 곳"
            style="@style/LabelStyle" />
        <EditText
            android:id="@+id/et_location"
            android:hint="예: 도서관 1층 입구"
            style="@style/InputStyle" />

        <TextView android:text="시간" style="@style/LabelStyle" />
        <EditText
            android:id="@+id/et_time"
            android:hint="날짜와 시간을 선택하세요"
            android:focusable="false"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_calendarplus"
            android:drawablePadding="8dp"
            style="@style/InputStyle" />

        <TextView android:text="종류" style="@style/LabelStyle" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_5"
            app:chipSpacingHorizontal="8dp"
            app:singleSelection="true">
            <com.google.android.material.chip.Chip android:id="@+id/cat_wallet" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="휴대폰"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_umbrella" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="노트북"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_phone" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="지갑"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_bag" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="가방"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_card" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="카드"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_key" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="책"/>
            <com.google.android.material.chip.Chip android:id="@+id/cat_etc" style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="기타"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView android:text="특징" style="@style/LabelStyle" />
        <EditText
            android:id="@+id/et_features"
            android:hint="예: 손잡이에 스티커가 있음"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minHeight="80dp"
            android:paddingTop="12dp"
            style="@style/InputStyle" />

        <TextView android:text="연락처" style="@style/LabelStyle" />
        <EditText
            android:id="@+id/et_storage"
            android:hint="예: 010-1234-5678"
            style="@style/InputStyle" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="@color/primary"
            android:text="분실물 등록"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</ScrollView>