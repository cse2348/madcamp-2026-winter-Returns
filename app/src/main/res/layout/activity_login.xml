<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E3A8A">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- 시작하기 레이어 -->
        <LinearLayout
            android:id="@+id/layoutInitial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo_mascot"
                android:scaleType="centerInside"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:backgroundTint="#FFFFFF"
                android:text="시작하기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- 닉네임 입력 레이어 -->
        <LinearLayout
            android:id="@+id/layoutRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임을 등록하세요"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8자 이하로 입력해주세요"
                android:textColor="#A0FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etNickname"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_white_rounded_12"
                    android:hint="닉네임 입력"
                    android:paddingHorizontal="16dp"
                    android:paddingEnd="50dp"
                    android:maxLength="8"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/btnCheckNickname"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_primary_rounded_8"
                    android:src="@drawable/ic_send"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="이미 존재하는 닉네임입니다"
                android:textColor="#EF4444"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_circle_x"
                android:drawablePadding="8dp"/>
        </LinearLayout>

        <!-- 중복 확인레이어 -->
        <LinearLayout
            android:id="@+id/layoutChecking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_checking_circle">
                <ProgressBar
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="#FFFFFF" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복 확인 중..."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 가입성공 레이어 -->
        <LinearLayout
            android:id="@+id/layoutSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환영합니다"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWelcomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동님"
                android:textColor="#CCFFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/ivSuccessCheck"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="32dp"
                android:padding="16dp"
                android:background="@drawable/bg_success_circle"
                android:src="@drawable/ic_circle_check" />

            <Button
                android:id="@+id/btnFinalStart"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:backgroundTint="#FFFFFF"
                android:text="시작하기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>