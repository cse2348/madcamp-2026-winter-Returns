<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:background">@drawable/edittext_rounded_border</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_foreground</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="android:layout_marginBottom">@dimen/spacing_5</item>
    </style>
    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_foreground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>