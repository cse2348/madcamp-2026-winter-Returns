<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Returns" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1E3A8A</item>
        <item name="colorPrimaryVariant">#172554</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#2563EB</item>
        <item name="colorSecondaryVariant">#1D4ED8</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
    </style>

    <style name="RoundedCorner16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundedCornersDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="shapeAppearance">@style/CustomDialogShape</item>
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="CustomDialogShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

</resources>